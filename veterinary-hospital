    <script>
        // ڈیٹا مینجمنٹ
        let patients = JSON.parse(localStorage.getItem('vetPatients')) || [];
        
        // ٹیب نیویگیشن
        document.querySelectorAll('.nav-tab').forEach(tab => {
            tab.addEventListener('click', () => {
                document.querySelectorAll('.nav-tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
                
                tab.classList.add('active');
                document.getElementById(tab.dataset.tab).classList.add('active');
                
                if (tab.dataset.tab === 'dashboard') {
                    updateDashboard();
                } else if (tab.dataset.tab === 'patients') {
                    loadPatientsTable();
                }
            });
        });
        
        // ڈیش بورڈ اپ ڈیٹ
        function updateDashboard() {
            document.getElementById('totalPatients').textContent = patients.length;
            
            const livestock = patients.filter(p => 
                ['cattle', 'buffalo', 'sheep', 'goat'].includes(p.species)
            ).length;
            document.getElementById('livestockCount').textContent = livestock;
            
            const pets = patients.filter(p => 
                ['dog', 'cat'].includes(p.species)
            ).length;
            document.getElementById('petsCount').textContent = pets;
            
            const totalFee = patients.reduce((sum, patient) => sum + (patient.fee || 0), 0);
            document.getElementById('revenue').textContent = totalFee + ' PKR';
        }
        
        // مریض فارم جمع کروانا
        document.getElementById('patientForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const newPatient = {
                id: Date.now(),
                farmerName: document.getElementById('farmerName').value,
                contactNumber: document.getElementById('contactNumber').value,
                address: document.getElementById('address').value,
                cnic: document.getElementById('cnic').value,
                species: document.getElementById('species').value,
                breed: document.getElementById('breed').value,
                age: document.getElementById('age').value,
                weight: document.getElementById('weight').value,
                symptoms: document.getElementById('symptoms').value,
                date: new Date().toLocaleDateString('ur-PK'),
                fee: Math.floor(Math.random() * 2000) + 500 // Random fee between 500-2500
            };
            
            patients.push(newPatient);
            localStorage.setItem('vetPatients', JSON.stringify(patients));
            
            showNotification('مریض کا ریکارڈ کامیابی سے محفوظ ہوگیا!', 'success');
            this.reset();
            updateDashboard();
        });
        
        // مریضوں کی ٹیبل لود کریں
        function loadPatientsTable() {
            const tableBody = document.getElementById('patientsTable');
            tableBody.innerHTML = patients.map(patient => `
                <tr>
                    <td>${patient.id}</td>
                    <td>${patient.farmerName}</td>
                    <td>${getSpeciesName(patient.species)}</td>
                    <td>${patient.date}</td>
                    <td class="action-buttons">
                        <button class="btn btn-primary" onclick="viewPatient(${patient.id})">
                            <i class="fas fa-eye"></i> دیکھیں
                        </button>
                        <button class="btn btn-success" onclick="editPatient(${patient.id})">
                            <i class="fas fa-edit"></i> ترمیم
                        </button>
                    </td>
                </tr>
            `).join('') || '<tr><td colspan="5" style="text-align: center;">کوئی ریکارڈ موجود نہیں</td></tr>';
        }
        
        // قسم کا نام حاصل کریں
        function getSpeciesName(species) {
            const names = {
                'cattle': 'گائے',
                'buffalo': 'بھینس',
                'sheep': 'بھیڑ',
                'goat': 'بکری',
                'dog': 'کتا',
                'cat': 'بلی',
                'other': 'دیگر'
            };
            return names[species] || species;
        }
        
        // مریض دیکھیں
        function viewPatient(id) {
            const patient = patients.find(p => p.id === id);
            if (patient) {
                alert(`مریض کی تفصیلات:\n\nکسان: ${patient.farmerName}\nقسم: ${getSpeciesName(patient.species)}\nعمر: ${patient.age}\nوزن: ${patient.weight}kg\nعلامات: ${patient.symptoms}\nفیس: ${patient.fee} PKR`);
            }
        }
        
        // مریض میں ترمیم کریں
        function editPatient(id) {
            showNotification('ترمیم کی سہولت جلد دستیاب ہوگی', 'success');
        }
        
        // ڈیٹا ایکسپورٹ کریں
        function exportData() {
            if (patients.length === 0) {
                showNotification('ایکسپورٹ کے لیے کوئی ڈیٹا موجود نہیں', 'success');
                return;
            }
            
            const csvContent = "data:text/csv;charset=utf-8," 
